<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GenderActivity">

    <TextView
        android:id="@+id/tittleGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Apa jenis kelamin Anda?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:layout_marginTop="50dp"/>

    <TextView
        android:id="@+id/descGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Anda bisa mengubah siapa yang bisa melihat jenis kelamin di profil nanti"
        android:maxLines="2"
        android:textAlignment="center"
        android:layout_below="@id/tittleGender"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/descGender">

        <RadioButton
            android:id="@+id/rbPerempuan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perempuan"
            android:gravity="right"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>

        <RadioButton
            android:id="@+id/rbLakilaki"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laki-laki"
            android:layout_marginTop="10dp"
            android:gravity="right"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"/>
    </RadioGroup>

    <Button
        android:id="@+id/btnLanjutGender"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Selanjutnya"
        android:textColor="@android:color/white"
        android:background="#0000ff"
        android:layout_below="@id/rgGender"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

</RelativeLayout>