<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity">

    <ImageView
        android:id="@+id/coverFirst"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/first"/>

    <TextView
        android:id="@+id/bergabung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bergabung dengan Facebook"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_below="@id/coverFirst"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:text="Kami akan membantu Anda membuat akun baru dengan beberapa langkah mudah"
        android:textAlignment="center"
        android:layout_below="@id/bergabung"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btnSelanjutnya"
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:text="Selanjutnya"
        android:textColor="@android:color/white"
        android:layout_below="@id/desc"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:background="#0000ff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Sudah memiliki akun?"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="#0000ff"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>